# ============================================================================
# HITL Evidence Review - Environment Configuration
# ============================================================================
# Copy this file to .env and configure as needed

# ============================================================================
# TEST MODE (Default - FREE)
# ============================================================================
# Use these settings for development, testing, and training
# No API costs - uses mock predictions

ENABLE_GPT4_VISION=false
ENABLE_CLAUDE_VISION=false
ENABLE_GPT4_MINI=false
USE_MOCK_PREDICTIONS=true
MAX_API_COST=0.0

# Mock consensus mode: "full_agreement", "majority", or "disagreement"
MOCK_CONSENSUS=full_agreement


# ============================================================================
# PRODUCTION MODE (Paid APIs)
# ============================================================================
# Uncomment these settings when ready for production
# WARNING: This will incur API costs!

# Enable AI APIs
# ENABLE_GPT4_VISION=true
# ENABLE_CLAUDE_VISION=true
# ENABLE_GPT4_MINI=true
# USE_MOCK_PREDICTIONS=false

# API Keys (required for production)
# OPENAI_API_KEY=sk-...
# ANTHROPIC_API_KEY=sk-ant-...

# Cost limit (USD per video)
# MAX_API_COST=5.0


# ============================================================================
# DATABASE
# ============================================================================
DATABASE_URL=sqlite:///./video_qa.db


# ============================================================================
# SERVER
# ============================================================================
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
FRONTEND_PORT=3000


# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=INFO
ENABLE_DEBUG_LOGGING=false
